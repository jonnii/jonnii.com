!!! 5
-ie_html :class => 'no-js' do

  %head
    %meta{ :charset => "utf-8" }/
    
    %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }/
    
    %title jonnii.com | blogging is stupid
    %meta{ :name => "description", :content => "jonnii" }/
    %meta{ :name => "keywords", :content => "jonnii" }/
    %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }/
  
    %link{ :rel => "openid.server", :href => "http://www.myopenid.com/server"}
    %link{ :rel => "openid.delegate", :href => "http://jonathangoldman.myopenid.com/"}
  
    -# %link{ :href => "/favicon.ico", :rel => "shortcut icon" }/
    %link{ :href => "/apple-touch-icon.png", :rel => "apple-touch-icon" }/
    
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Molengo'
    = stylesheet_link_tag 'application.css'
  
    = javascript_include_tag 'modernizr-1.7.min'
  
    = csrf_meta_tag
  
    - if protect_against_forgery?
      :javascript
        window._auth_token_name = "#{request_forgery_protection_token}";
        window._auth_token = "#{form_authenticity_token}";
  
  %body{ :lang => 'en' }
  
    #main{ :role => 'main' }
      #content
        = yield
      .clear.clearfix